@model Category

<form method="post" asp-action="DeletePOST">    @*if no actions is written, it will submit to the action method of the get*@
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div> @*this field shows the errors all together with bullets*@
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" disabled class="form-control" />
        </div>
        <button type="submit" class="btn btn-danger" style="width:10%">Delete</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:10%">
            <i class="bi bi-trash"></i>
            Return 
        </a>
    </div>
</form>

@section Scripts{   @*for client side validation*@
    <partial name="_ValidationScriptsPartial" />
}
